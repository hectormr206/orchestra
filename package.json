{
  "name": "@ai-core/orchestra",
  "version": "0.1.0",
  "description": "Meta-Orchestrator for AI development tools - coordinates Claude, Codex, Gemini, and GLM for complex development tasks",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli/index.js",
    "./tui": "./dist/tui/index.js"
  },
  "bin": {
    "orchestra": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "dev:tui": "tsx watch src/tui/index.ts",
    "start": "node dist/cli/index.js",
    "tui": "node dist/tui/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "benchmark": "node scripts/benchmark.js",
    "analyze": "node scripts/analyze-metrics.js",
    "profile": "clinic doctor -- on -- node dist/cli/index.js start 'test task'",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run build",
    "completion": "node ./dist/cli/index.js completion"
  },
  "keywords": [
    "ai",
    "orchestrator",
    "claude",
    "codex",
    "gemini",
    "glm",
    "automation",
    "cli",
    "tui",
    "multi-agent",
    "code-generation"
  ],
  "author": "Hector MR",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gama/ai-core.git",
    "directory": "orchestra"
  },
  "bugs": {
    "url": "https://github.com/gama/ai-core/issues"
  },
  "homepage": "https://github.com/gama/ai-core/tree/main/orchestra#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.211.0",
    "@opentelemetry/core": "^2.5.0",
    "@opentelemetry/exporter-prometheus": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.211.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-logs": "^0.211.0",
    "@opentelemetry/sdk-metrics": "^2.5.0",
    "@opentelemetry/sdk-trace-base": "^2.5.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@types/glob": "^8.1.0",
    "@types/pino": "^7.0.4",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^13.0.0",
    "ink": "^6.6.0",
    "ink-big-text": "^2.0.0",
    "ink-box": "^1.0.0",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.0.1",
    "pino": "^10.3.0",
    "react": "^19.2.4",
    "redis": "^5.10.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.10",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "clinic": "^13.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
