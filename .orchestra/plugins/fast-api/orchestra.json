{
  "name": "fast-api",
  "version": "0.1.0",
  "description": "FastAPI plugin for Orchestra CLI - Provides specialized prompts and patterns for FastAPI applications",
  "author": "Orchestra Team",
  "license": "MIT",
  "main": "index.js",
  "orchestraVersion": ">=0.1.0",
  "hooks": {
    "before-plan": "enhancePlanForFastAPI",
    "before-execute": "validateFastAPICode",
    "after-execute": "suggestFastAPIBestPractices",
    "before-audit": "configureFastAPIAuditRules"
  },
  "config": {
    "detectRouters": true,
    "detectDependencies": true,
    "suggestPatterns": true
  }
}
