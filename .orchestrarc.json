{
  "execution": {
    "parallel": false,
    "maxConcurrency": 1,
    "timeout": 900000,
    "maxIterations": 5
  },
  "test": {
    "command": "npm test",
    "runAfterGeneration": true
  },
  "git": {
    "autoCommit": false
  },
  "tui": {
    "autoApprove": false,
    "notifications": true,
    "cacheEnabled": true,
    "maxRecoveryAttempts": 5,
    "recoveryTimeoutMinutes": 15,
    "autoRevertOnFailure": true,
    "agents": {
      "architect": ["Claude (GLM)"],
      "executor": ["Claude (GLM)"],
      "auditor": ["Claude (GLM)"],
      "consultant": ["Claude (GLM)"]
    }
  },
  "observer": {
    "enabled": true,
    "appUrl": "http://localhost:3000",
    "devServerCommand": "npm run dev",
    "renderWaitMs": 3000,
    "maxVisualIterations": 3,
    "viewport": { "width": 1920, "height": 1080 },
    "routes": ["/"],
    "captureConsoleErrors": true,
    "visionModel": "kimi"
  }
}
